<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="ContactName" parent="android:Widget.TextView">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
    </style>

    <style name="ContactName.Light" parent="ContactName">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContactName.Dark" parent="ContactName">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AdditionalTextStyle.Light" parent="ContactName">
        <item name="android:textColor">@color/grey_3</item>
    </style>

    <style name="AdditionalTextStyle.Dark" parent="ContactName">
        <item name="android:textColor">@color/grey_c</item>
    </style>



</resources>
